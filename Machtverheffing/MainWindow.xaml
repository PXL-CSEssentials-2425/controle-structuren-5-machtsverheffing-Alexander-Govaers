<Window x:Class="Machtverheffing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Machtverheffing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Margin="57,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="534" Height="257"/>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Margin="129,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="68" Height="32" FontWeight="Bold" Background="#FFDCC5C5"/>
        <TextBlock HorizontalAlignment="Left" Margin="137,38,0,0" TextWrapping="Wrap" Text="Getal" VerticalAlignment="Top" Height="27" Width="70" FontSize="18" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.347"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Button x:Name="calculateButton" Content="Bereken" HorizontalAlignment="Left" Margin="650,152,0,0" VerticalAlignment="Top" Height="39" Width="72" Click="calculateButton_Click"/>
        <Button x:Name="clearButton" HorizontalAlignment="Left" Margin="648,0,0,0" VerticalAlignment="Center" Height="43" Width="74" Content="Wissen" Click="clearButton_Click"/>
        <Button x:Name="closeButton" HorizontalAlignment="Left" Margin="650,242,0,0" VerticalAlignment="Top" Height="44" Width="72" Click="closeButton_Click" Content="Aflsuiten"/>

    </Grid>
</Window>
